<Window x:Class="TenkiApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="天気" Height="720" Width="1280"
        Background="#1E2A47" FontFamily="Segoe UI">

    <Grid>
        <!-- 上部固定の検索エリア -->
        <DockPanel LastChildFill="False" Background="#1E2A47" Height="50" VerticalAlignment="Top">
            <TextBlock Text="天気予報" FontSize="24" FontWeight="Bold" Foreground="White" DockPanel.Dock="Left" VerticalAlignment="Center" Margin="20,0,0,0"/>
            <TextBox x:Name="LocationTextBox" Width="300" Height="28" DockPanel.Dock="Right" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Button Content="検索" Width="80" Height="28" DockPanel.Dock="Right" VerticalAlignment="Center" Margin="0,0,20,0" Click="FetchButton_Click"/>
        </DockPanel>

        <!-- メインコンテンツ -->
        <ScrollViewer Margin="0,50,0,0">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!-- 左の天気カード -->
                <Border Grid.Column="0" Background="#243660" CornerRadius="10" Padding="20" Margin="0,0,10,0">
                    <StackPanel>
                        <TextBlock x:Name="LocationNameText" Text="場所: ---" FontSize="20" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,10">
                            <Ellipse Width="80" Height="80" Fill="#FFD94A" Stroke="#FFC42E" StrokeThickness="2"/>
                            <TextBlock x:Name="TempText" Text="--°C" FontSize="48" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" Margin="15,0,0,0"/>
                        </StackPanel>
                        <TextBlock x:Name="WeatherText" Text="---" FontSize="18" Foreground="White" Margin="0,0,0,10"/>
                        <TextBlock x:Name="WindText" Text="風速: -- m/s" FontSize="14" Foreground="White" Margin="0,0,0,20"/>
                    </StackPanel>
                </Border>

                <!-- 右の地図 -->
                <Border Grid.Column="1" Background="#243660" CornerRadius="10" Padding="10" Margin="10,0,0,0">
                    <controls:WebView2 x:Name="MapBrowser" Height="600"/>
                </Border>
            </Grid>

            <!-- 週間天気予報 -->
            <Grid Margin="20,20,20,0">
                <TextBlock Text="週間天気予報" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                <StackPanel x:Name="WeeklyWeatherStack" Orientation="Horizontal" HorizontalAlignment="Left">
                    <!-- 週間天気の情報がここに追加されます -->
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
