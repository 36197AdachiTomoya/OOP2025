<Window x:Class="TenkiApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="TenkiApp" Height="650" Width="400" Background="#FFEFF6FF">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 入力 -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
            <Border Background="White" CornerRadius="5" BorderBrush="#FFAAAAAA" BorderThickness="1">
                <TextBox x:Name="LocationTextBox" Width="200" Height="30" 
                         Padding="5" FontSize="14" VerticalContentAlignment="Center"
                         BorderThickness="0" Background="Transparent"/>
            </Border>

            <Button Content="取得" Width="80" Height="30" Margin="10,0,0,0"
                    Background="#FF4A90E2" Foreground="White" FontWeight="Bold"
                    BorderThickness="0" Click="FetchButton_Click" Cursor="Hand"/>
        </StackPanel>

        <!-- メイン表示 -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20">
            <TextBlock x:Name="LocationNameText" Text="場所: ----" FontSize="20" FontWeight="SemiBold" TextAlignment="Center" Margin="0,0,0,15"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                <TextBlock x:Name="TempText" Text="--°C" FontSize="48" FontWeight="Bold" Margin="0,0,15,0"/>
                <TextBlock x:Name="WeatherText" Text="----" FontSize="24" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <Border Background="White" CornerRadius="10" Padding="15" Margin="5" Width="120" Height="80" BorderBrush="#FFAAAAAA" BorderThickness="1">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="湿度" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="HumidityText" Text="--%" FontSize="16" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Background="White" CornerRadius="10" Padding="15" Margin="5" Width="120" Height="80" BorderBrush="#FFAAAAAA" BorderThickness="1">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="風速" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="WindText" Text="-- m/s" FontSize="16" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <TextBlock x:Name="SunriseText" Text="日の出: --:--" Margin="10,0"/>
                <TextBlock x:Name="SunsetText" Text="日の入り: --:--" Margin="10,0"/>
            </StackPanel>

            <!-- WebView2 地図 -->
            <controls:WebView2 x:Name="MapBrowser" Height="300" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
