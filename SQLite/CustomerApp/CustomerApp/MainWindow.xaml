<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerApp" SizeToContent="Height"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="800">
    <Window.Resources>
        <local:ByteArrayToImageConverter x:Key="ByteArrayToImageConverter"/>
    </Window.Resources>
    <Grid>
        <Border Width="300" Height="200" BorderBrush="Black" BorderThickness="2" CornerRadius="5"
        HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,150,300,0">
            <Image x:Name="CustomerImage" Width="300" Height="200" Stretch="Uniform" RenderTransformOrigin="0.51,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="0"/>
                        <RotateTransform/>
                        <TranslateTransform X="0"/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
        </Border>

        <StackPanel Margin="10">

            <TextBox x:Name="NameTextBox" Text="名前：" Height="30" Width="400" 
                     HorizontalAlignment="Left" Margin="5"/>
            <TextBox x:Name="PhoneTextBox" Text="電話番号：" Height="30" Width="400" 
                     HorizontalAlignment="Left" Margin="5"/>
            <TextBox x:Name="AddressTextBox" Text="住所：" Height="30" Width="400" 
                     HorizontalAlignment="Left" Margin="5"/>
            <Button Content="保存" FontSize="24" x:Name="SaveButton" Click="SaveButton_Click" Height="50" Width="100" HorizontalAlignment="Left" Margin="5"/>
            <Button Content="取得" FontSize="24" x:Name="ReadButton" Click="ReadButton_Click" Height="50" Width="100" HorizontalAlignment="Left" Margin="5"/>
            <Button Content="削除" FontSize="24" x:Name="DeleteButton" Click="DeleteButton_Click" Height="50" Width="100" HorizontalAlignment="Left" Margin="5"/>
            <Button Content="画像" FontSize="24" x:Name="ImageButton" Click="ImageButton_Click" Height="50" Width="100" HorizontalAlignment="Left" Margin="5"/>
            <ListView x:Name="CustomerListView" Margin="0,5,0,0" Height="471">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <!-- 画像表示 -->
                                <Image Width="100" Height="80" Stretch="UniformToFill" 
                                 Source="{Binding Image, Converter={StaticResource ByteArrayToImageConverter}}" />
                            <!-- テキスト情報 -->
                            <StackPanel>
                                <TextBlock Text="{Binding Id}" />
                                <TextBlock Text="{Binding Name}" FontSize="20" />
                                <TextBlock Text="{Binding Phone}" />
                                <TextBlock Text="{Binding Address}" />
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>
        </StackPanel>
    </Grid>
</Window>
